<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Default.NoActionBar" parent="android:style/Theme.Holo.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/window_bg</item>
    </style>

    <style name="ActivityTheme" parent="Theme.Default.NoActionBar">
        <item name="android:windowBackground">@android:color/darker_gray</item>
    </style>

    <style name="BtnStyle" parent="AppTheme">
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAppearance">?android:textAppearanceLargeInverse</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
        <item name="android:padding">6dp</item>

    </style>

    <style name="TVStyle" parent="AppTheme">
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>



</resources>
